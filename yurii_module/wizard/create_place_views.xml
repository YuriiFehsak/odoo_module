<?xml version="1.0"?>
<odoo>
    <record id="view_create_place_form" model="ir.ui.view">
        <field name="name">create.place.wizard.form</field>
        <field name="model">create.place.wizard</field>
        <field name="arch" type="xml">
            <form string="Create New Place">
                <group>
                    <field name="name"/>
                    <field name="contact_from_id"/>
                </group>
                <footer>
<!--                    <button id="create_place" name="%(action_create_place)d" string="Add" class="btn-primary" type="action"/>-->
                    <button name="Save" string="Save" class="btn-primary" type="save"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_place" model="ir.actions.act_window">
        <field name="name">Create Place</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.place.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_create_place_form"/>
        <field name="target">new</field>

    </record>




</odoo>
